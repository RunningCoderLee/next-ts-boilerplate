{
  "name": "next-ts-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "ts-compile-check": "tsc -p tsconfig.json",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/node": "12.7.2",
    "@typescript-eslint/eslint-plugin": "2.0.0",
    "@typescript-eslint/parser": "2.0.0",
    "@zeit/next-css": "1.0.1",
    "@zeit/next-sass": "1.0.1",
    "antd": "3.22.0",
    "antd-mobile": "2.3.1",
    "autoprefixer": "9.6.1",
    "babel-eslint": "10.0.2",
    "babel-plugin-import": "1.12.0",
    "cross-env": "5.2.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.1.0",
    "eslint-loader": "2.2.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "1.7.0",
    "husky": "3.0.4",
    "less": "3.9.0",
    "less-loader": "5.0.0",
    "lint-staged": "9.2.3",
    "next": "9.0.3",
    "next-compose-plugins": "2.2.0",
    "node-sass": "4.12.0",
    "null-loader": "3.0.0",
    "postcss-px-to-viewport": "1.1.1",
    "prettier": "1.18.2",
    "react": "16.9.0",
    "react-dev-utils": "9.0.3",
    "react-dom": "16.9.0",
    "stylelint": "10.1.0",
    "stylelint-config-css-modules": "1.4.0",
    "stylelint-config-prettier": "5.2.0",
    "stylelint-config-rational-order": "0.0.4",
    "stylelint-config-sass-guidelines": "6.0.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-declaration-block-no-ignored-properties": "2.1.0",
    "stylelint-order": "3.0.1",
    "stylelint-prettier": "1.1.1",
    "stylelint-scss": "3.9.4",
    "typescript": "3.5.3"
  },
  "browserslist": [
    "last 2 iOS major versions",
    "Android > 7",
    "iOS > 8"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run ts-compile-check && npm run lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "cross-env ESLINT_ENV=production eslint --fix -f table --ignore-pattern '!.eslintrc.js,!stylelintrc.js'",
      "git add"
    ],
    "**/*.css": [
      "stylelint --fix",
      "git add"
    ],
    "**/*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ],
    "**/*.less": [
      "stylelint --syntax=less --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
